import fs from "node:fs";

export const getLocalFiles = (dir) => {
  const files = [];
  const fileList = fs.readdirSync(dir);
  fileList.forEach((file) => {
    const ifImg =
      file.includes(".png") || file.includes(".jpg") || file.includes(".gif");

    const schema = {
      imgPath: ifImg ? file : false,
      folderName: file,
    };
    files.push(schema);
    return files;
  });

  return files;
};